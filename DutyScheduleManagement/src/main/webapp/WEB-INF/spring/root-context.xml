<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="jdbcProp" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/jdbc.properties</value>
				<value>classpath:/email.properties</value>
			</list>
		</property>
	</bean>


	<!-- Root Context: defines shared resources visible to all other web components -->
	<import resource="classpath:config/spring/context-datasource.xml" />
	<import resource="classpath:config/spring/context-email.xml" />
	<import resource="classpath:config/spring/context-schedule.xml" />
	<import resource="classpath:config/spring/context-common.xml" />
</beans>
